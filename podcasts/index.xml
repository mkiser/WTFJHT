---

<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" 
  xmlns:content="http://purl.org/rss/1.0/modules/content/" 
  xmlns:dc="http://purl.org/dc/elements/1.1/" 
  xmlns:atom="http://www.w3.org/2005/Atom" 
  xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd" 
  xmlns:podcast="https://podcastindex.org/namespace/1.0"
  xmlns:media="http://search.yahoo.com/mrss/">

<channel>
  <title>{{ site.podcast_title }}</title>
  <atom:link href="{{ site.url }}{{ site.baseurl }}/podcasts/index.xml" rel="self" type="application/rss+xml" />
  <link>{{ site.url }}{{ site.baseurl }}</link>
  <description>{{ site.podcast_description }}</description>
  <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
  <language>en-US</language>
  <copyright>{{ site.podcast_copyright }}</copyright>
  <generator>Jekyll</generator>
  
  <itunes:summary>{{ site.podcast_summary }}</itunes:summary>
  <itunes:author>{{ site.podcast_author }}</itunes:author>
  <itunes:explicit>{{ site.podcast_explicit }}</itunes:explicit>
  <itunes:type>episodic</itunes:type>
  <itunes:image href="{{ site.cloudfront_url }}{{ site.podcast_album_art }}" />
  <itunes:owner>
    <itunes:name>{{ site.podcast_owner }}</itunes:name>
    <itunes:email>{{ site.podcast_email }}</itunes:email>
  </itunes:owner>
  <itunes:category text="{{ site.podcast_category }}">
    <itunes:category text="{{ site.podcast_subcategory }}" />
  </itunes:category>
  
  <podcast:locked>no</podcast:locked>
  <podcast:guid>{{ site.podcast_guid }}</podcast:guid>
  <podcast:medium>podcast</podcast:medium>
  <podcast:funding url="{{ site.url }}{{ site.baseurl }}/membership/">Support WTF Just Happened Today</podcast:funding>
  
  <image>
    <title>{{ site.podcast_title }}</title>
    <url>{{ site.cloudfront_url }}{{ site.podcast_album_art }}</url>
    <link>{{ site.url }}{{ site.baseurl }}</link>
  </image>

  {%- assign episodes = "" | split: "" -%}
  {%- for post in site.posts -%}
    {%- if post.podcast.file and post.podcast.file != '' -%}
      {%- assign episodes = episodes | push: post -%}
    {%- endif -%}
  {%- endfor -%}

  {%- for post in episodes limit:50 -%}
  <item>
    <title>{{ post.title | xml_escape }}: {{ post.description | xml_escape }}</title>
    <guid isPermaLink="false">{{ site.url }}{{ post.url }}</guid>
    <link>{{ site.url }}{{ site.baseurl }}{{ post.url }}</link>
    <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    <dc:creator>{{ site.podcast_owner }}</dc:creator>
    
    <description><![CDATA[
      <p><strong>{{ post.date | date: "%A, %B %-d, %Y" }}</strong></p>
      <p>{{ post.todayInOneSentence }}</p>
      <p><strong>Read more:</strong> <a href="{{ site.url }}{{ site.baseurl }}{{ post.url }}">{{ post.title }}: {{ post.description }}</a></p>
      <p><strong>Subscribe:</strong> <a href="{{ site.url }}{{ site.baseurl }}/subscribe/">Get the Daily Update in your inbox for free</a></p>
      <p><strong>Feedback?</strong> <a href="https://wtfjht.com/feedback">Let us know what you think</a></p>
    ]]></description>
    
    <content:encoded><![CDATA[
      <p><strong>{{ post.date | date: "%A, %B %-d, %Y" }}</strong></p>
      <p>{{ post.todayInOneSentence }}</p>
      <p><strong>Read more:</strong> <a href="{{ site.url }}{{ site.baseurl }}{{ post.url }}">{{ post.title }}: {{ post.description }}</a></p>
      <p><strong>Subscribe:</strong> <a href="{{ site.url }}{{ site.baseurl }}/subscribe/">Get the Daily Update in your inbox for free</a></p>
      <p><strong>Feedback?</strong> <a href="https://wtfjht.com/feedback">Let us know what you think</a></p>
    ]]></content:encoded>

    <enclosure url="{{ site.cloudfront_url }}{{ post.podcast.file | replace: ' ', '%20' }}" length="{{ post.podcast.length }}" type="audio/mpeg" />

    <itunes:title>{{ post.title | xml_escape }}: {{ post.description | xml_escape }}</itunes:title>
    <itunes:summary><![CDATA[{{ post.date | date: "%A, %B %-d, %Y" }} â€” {{ post.todayInOneSentence }}]]></itunes:summary>
    <itunes:author>{{ site.podcast_author }}</itunes:author>
    <itunes:image href="{{ site.cloudfront_url }}{{ site.podcast_album_art }}" />
    <itunes:explicit>{{ site.podcast_explicit }}</itunes:explicit>
    <itunes:duration>{{ post.podcast.duration }}</itunes:duration>
    <itunes:episodeType>full</itunes:episodeType>
    
    {%- if post.podcast.transcript and post.podcast.transcript != '' -%}
    <podcast:transcript url="{{ site.cloudfront_url }}{{ post.podcast.transcript }}" type="text/vtt" />
    {%- endif -%}
    
    <media:content url="{{ site.cloudfront_url }}{{ site.podcast_album_art }}" medium="image">
      <media:title type="html">{{ post.title | xml_escape }}</media:title>
    </media:content>
  </item>
  {%- endfor -%}

</channel>
</rss>
